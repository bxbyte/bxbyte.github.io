---
import type { HTMLAttributes, HTMLTag } from "astro/types"

type Props<T extends HTMLTag> = HTMLAttributes<T> & {
	el: T
}

const { el: Element, class: class_, ...props } = Astro.props
---

<Element class:list={["block", class_]} {...props}>
	<slot />
</Element>

<style lang="scss">
	@use "@/styles/layout.module.scss";

	.block {
		padding: layout.$window-padding-y layout.$window-padding-x;
		width: calc(100% - 2 * layout.$window-padding-x);
		max-width: layout.$window-max-width;
	}
</style>
