<script>
	import { toggleTheme } from "../store"
	import { define } from "@/modules/composer/client"

	define("toggle-theme", { extends: "button" })(
		class extends HTMLButtonElement {
			constructor() {
				super()
				this.addEventListener("click", toggleTheme)
			}
		}
	)
</script>

