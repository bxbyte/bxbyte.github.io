---
import { SharpPicture } from "@/modules/picture/components";

interface Props {
    cover: component.Props_<typeof SharpPicture>['src']
}

const { cover, ...props } = Astro.props
---

<SharpPicture
    src={cover}
    alt="Cover"
    width={1920}
    height={1080}
    computeImg={(img) => img.greyscale()}
    {...props}
/>