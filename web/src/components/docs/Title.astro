---
import { p } from '@/modules/composer/server'

interface Props {
    title?: string
	variant?: 'left'
}

const { title, variant, ...rawProps } = Astro.props

const props = p(rawProps)
	.with("class", variant)
	.end()
---

<div>
    <div {...props}>
		<slot name="pre"/>
        <h1>{title}</h1>
		<slot/>
    </div>
</div>

<style lang="scss">
	div:has(div) {
		display: flex;
		align-items: center;
		justify-content: center;
		
		div {
			display: flex;
			flex-direction: column;
			gap: .75rem;
			text-align: center;
			align-items: center;

			:global(>*) {
				text-wrap: balance;
				min-width: fit-content;
				width: min-content;
			}

			h1 {
				padding: 0 1em;
				max-width: 60vw;
				width: max-content;
				text-wrap: nowrap;
			}
		}

		div.left {
			text-align: left;
			align-items: start;
			
			h1 {
				padding: 0 1em 0 0;
			}
		}
	}
</style>
