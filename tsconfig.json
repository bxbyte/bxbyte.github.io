{
	"extends": "astro/tsconfigs/base",
	"include": [".astro/types.d.ts", "**/*", "src/styles/theme"],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"jsxImportSource": "astro",
		"skipLibCheck": true,
		"strictNullChecks": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"!/*": ["*"]
		}
	}
}
