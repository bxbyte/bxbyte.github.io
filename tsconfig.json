{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist", "node_modules"],
	"compilerOptions": {
		"jsxImportSource": "astro",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"!/*": ["*"],
			"$/*": ["my_modules/*"]
		}
	}
}
